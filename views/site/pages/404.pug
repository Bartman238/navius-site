extends  ../_skeleton

//- Includes

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Страница не найдена'

block page
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'centr-sdelok/main-top1.jpg',
		data: '45'
	})
	
	section.section.section-md.bg-default.text-center
		.container
			h2.text-spacing-20 Страница не найдена
			p.heading-5 Страница не существует или перенесена
			a.button.button-primary(href='/') На главную



	// Page Footer
	include ../sections/_footer-classic
